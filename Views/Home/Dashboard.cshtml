@{
    ViewBag.Title = "Dashboard";
}

<div class="dashboard-content">
    <div class="expandable" onclick="toggleNested(this)">
        <button>I am a Doctor</button>
        <div class="nested-buttons">
            <button onclick="location.href='@Url.Action("DoctorSignUp", "Home")'">Sign Up</button>
            <button onclick="location.href='@Url.Action("DoctorSignIn", "Home")'">Sign In</button>
        </div>
    </div>
    <div class="expandable" onclick="toggleNested(this)">
        <button>I am a Patient</button>
        <div class="nested-buttons">
            <button onclick="location.href='@Url.Action("PatientSignUp", "Home")'">Sign Up</button>
            <button onclick="location.href='@Url.Action("PatientSignIn", "Home")'">Sign In</button>
        </div>
    </div>
</div>

<script>
    function toggleNested(element) {
        element.classList.toggle("expanded");
    }
</script>

